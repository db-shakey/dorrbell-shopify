{% if settings.use_side_cart_summary %}
<div id="cart-summary">
  <div class="inner">
    <a class="close toggle-cart-summary" href="#"><i class="icon-arrow4-left slim"></i> {{ 'layout.cart_summary.continue_shopping' | t }}</a>
    <h5 class="cart-summary-title">{{ 'layout.cart_summary.title' | t }}</h5>
    {% if cart.items.size > 0 %}
    <div class="cart-summary-item-list ft ftw">
    {% for item in cart.items %}
    <div class="cart-summary-item ftr cf db_cart_sum_item">
      <span class="image ftc">{{ item | img_url: 'small' | img_tag: item.title | link_to: item.url }}</span>
      <span class="title-variant ftc">
        <a class="title" href="{{ item.url }}">{{ item.product.metafields.product.brand }} {{ item.product.title }}</a>
        {% unless item.variant.title contains 'Default' %}
        	{%comment%}<span class="variant">{{ item.variant.title }}</span><br/>{%endcomment%}
        	<span class="variant">Size: {{ item.variant.option1 }}</span><br/>
        	<span class="variant">Color: {{ item.variant.option2 }}</span>
        {% endunless %}
      </span>
      {%comment%}
      <span class="qty ftc">
        <input class="micro select-on-focus" value="{{ item.quantity }}" /><br/>
      </span>
      <span class="price ftc">
        {{ item.variant.metafields.price.metaprice | money}}
      </span>
      {%endcomment%}

    </div>
    {% endfor %}
    {% else %}
    <p class="cart-summary-title">
      {{ 'layout.cart_summary.empty_html' | t }}
    </p>
    {% endif %}
  </div>
  <div class="cart-summary-footer">
    {%comment%}
    <div class="cart-summary-subtotal border-top">
      {{ 'layout.cart_summary.subtotal' | t }} <span class="amount">{{ cart.total_price | money }}</span>
    </div>
    {%endcomment%}
    <div class="cart-summary-buttons border-top cf">
      {% if settings.cart_side_onebutton %}
      <div class="align-right">
        <a class="btn checkout" href="/cart">{{ 'layout.cart_summary.cart' | t }}</a>
      </div>
      {% else %}
      <div class="a-button">
        <a class="btn alt cart" href="/cart">{{ 'layout.cart_summary.cart' | t }}</a>
      </div>
      <div class="a-button align-right">
        <a class="btn checkout" href="/checkout">{{ 'layout.cart_summary.checkout' | t }}</a>
      </div>
      {% endif %}
    </div>
  </div>
</div><!-- /#cart-summary -->
{% endif %}