<div class="db-login-col db-login-lt" style="width: 100%;">
  <div class="login-form-wrapper">
    <img src="{{ 'logo.png' | asset_url }}" width="300" height="51">
    <div class="db-login-form">
    	<h1 class="page-title">{{ 'customer.activate_account.title' | t }}</h1>
      <p class="db-text"><span style="font-family:proxima-nova;">{{ 'customer.activate_account.subtext' | t }}</span></p>

        {% form 'activate_customer_password' %}
        {% if form.errors %}
        <div class="notification errors">
          {{ form.errors | default_errors }}
        </div>
        {% endif %}
          	<input type="hidden" name="checkout_url" value="/index.html" />
      		<input type="password" placeholder=" Password" value="" name="customer[password]" id="customer_password" class="text db-login" autofocus />
          	<input type="password" placeholder=" Confirm Password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text db-login" autofocus />
          	<input class="btn db-login" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
      		<p class="db-text"><span style="font-family:proxima-nova;"><a class="db_remove" href="http://www.dorrbell.com">Go to our website</a></span></p>
        {% endform %}
    </div>
  </div>
</div>


