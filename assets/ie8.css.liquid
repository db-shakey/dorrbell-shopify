/* Font-facing again in the body fixes IE8's no-fonts-on-first-page-load bug */
@font-face {
  font-family: 'icomoon';
  src:url('{{ 'icomoon.eot' | asset_url }}');
  src:url('{{ 'icomoon.eot' | asset_url | replace: '?', '?#iefix' }}') format('embedded-opentype'),
    url('{{ 'icomoon.woff' | asset_url }}') format('woff'),
    url('{{ 'icomoon.ttf' | asset_url }}') format('truetype'),
    url('{{ 'icomoon.svg' | asset_url | append: '#icomoon' }}') format('svg');
  font-weight: normal;
  font-style: normal;
}